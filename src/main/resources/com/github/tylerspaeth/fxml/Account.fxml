<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="accountAnchorPane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.tylerspaeth.ui.controllers.AccountController">
    <HBox>
        <VBox maxHeight="${accountAnchorPane.height}" maxWidth="${accountAnchorPane.width * 0.5}" minHeight="${accountAnchorPane.height}" minWidth="${accountAnchorPane.width * 0.5}">
         <children>
             <Text fx:id="accountIDText" strokeType="OUTSIDE" strokeWidth="0.0" />
             <Text fx:id="availableFundsText" strokeType="OUTSIDE" strokeWidth="0.0" />
             <Text fx:id="totalCashValueText" strokeType="OUTSIDE" strokeWidth="0.0" />
             <Text fx:id="dailyPnLText" strokeType="OUTSIDE" strokeWidth="0.0" />
             <Text fx:id="unrealizedPnLText" strokeType="OUTSIDE" strokeWidth="0.0" />
             <Text fx:id="realizedPnLText" strokeType="OUTSIDE" strokeWidth="0.0" />
         </children></VBox>
        <ListView fx:id="positionsListView" maxHeight="${accountAnchorPane.height}" maxWidth="${accountAnchorPane.width * 0.5}" minHeight="${accountAnchorPane.height}" minWidth="${accountAnchorPane.width * 0.5}" />
    </HBox>
</AnchorPane>
