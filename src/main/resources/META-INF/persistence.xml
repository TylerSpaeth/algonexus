<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.github.tylerspaeth.common.data.entity.Exchange</class>
        <class>com.github.tylerspaeth.common.data.entity.Symbol</class>
        <class>com.github.tylerspaeth.common.data.entity.HistoricalDataset</class>
        <class>com.github.tylerspaeth.common.data.entity.Candlestick</class>
        <class>com.github.tylerspaeth.common.data.entity.Order</class>
        <class>com.github.tylerspaeth.common.data.entity.OrderEvent</class>
        <class>com.github.tylerspaeth.common.data.entity.Strategy</class>
        <class>com.github.tylerspaeth.common.data.entity.StrategyParameter</class>
        <class>com.github.tylerspaeth.common.data.entity.StrategyParameterSet</class>
        <class>com.github.tylerspaeth.common.data.entity.User</class>
        <class>com.github.tylerspaeth.common.data.entity.Trade</class>
        <class>com.github.tylerspaeth.common.data.entity.BacktestResult</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/algonexus"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="PASSWORD"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/> <!-- or other dialect -->
        </properties>
    </persistence-unit>
</persistence>